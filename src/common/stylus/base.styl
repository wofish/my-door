.clearfix
    &:after
        display: block
        content: "."
        height: 0
        line-height: 0
        clear: both
        visibility: hidden
body
    background-color rgb(241,242,247)
    font-size 14px
    color #2a3542
    font-family  Microsoft YaHei,'宋体' , Tahoma, Helvetica, Arial, "\5b8b\4f53", sans-serif
input
    outline none
#app, body, html
    height 100%
#app
    min-width 1280px

.ivu-btn
    color #fff
    background-color rgb(51,153,255)
    border-color #fff
.ivu-btn-long
    width 28%
    margin-left 35%
.left
   display inline-block
   width 50%
.cursor
    cursor pointer
.tooltip.top
    .tooltip-inner
        border 1px solid #ddd
        background-color  #fff
        color #000
        word-wrap break-word
    .tooltip-arrow
        border-width 0
td.ivu-table-expanded-cell
   padding 0 20px 10px
   background-color white
.ivu-table-sort
    height 17px
/*贷款列表*/
.ivu-modal-mask
    width 100%
    height 100%
    background-color: rgba(55,55,55,.6);
    position fixed
    left 0
    top 0
    z-index 1000
.ivu-modal-wrap
    width 400px
    height 280px
    left 50%
    top 50%
    margin-left -200px
    margin-top -140px
    background-color #fff
    position  absolute
    -webkit-overflow-scrolling  touch
    outline 0
    border-radius 10px
.ivu-modal-body
    .input-item
    $:last-child
         margin-top 20px
 #account-control-tabs
    .ivu-tabs.ivu-tabs-card
          .ivu-tabs-bar
            .ivu-tabs-tab-active
                 background-color #1fa4f0
                 color #fff
#account-control-tabs
    .ivu-tabs-bar
        clear both
        overflow hidden
        margin-bottom 40px
        .ivu-tabs-nav-container
            border-bottom 2px solid #1fa4f0
            width 100%
            background-color white
            position fixed
            z-index 100
            .ivu-tabs-nav-wrap
                width 80%
